<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".MainActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:navigationIcon="@drawable/arrow_back"
            app:navigationIconTint="?attr/colorOnPrimary"
            app:title="Emergency Service"
            app:titleTextColor="?attr/colorOnPrimary" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <!-- Status Indicator -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/statusCard"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="48dp"
                app:cardCornerRadius="100dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:strokeColor="?attr/colorOutline">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/statusIcon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/safety_check_off"
                        android:layout_marginBottom="16dp"
                        android:padding="16dp"
                        app:tint="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/statusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Service Inactive"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textAlignment="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Service Description -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="48dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emergency Monitoring"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="8dp"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Activate background monitoring to enable instant emergency response and location tracking for your safety."
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textAlignment="center"
                    android:lineSpacingExtra="4dp"
                    android:alpha="0.8" />

            </LinearLayout>

            <!-- Control Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Start Service Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/start"
                    android:enabled="true"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginBottom="16dp"
                    android:onClick="startServiceV"
                    android:text="Start Monitoring"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:cornerRadius="32dp"
                    app:elevation="4dp"
                    app:icon="@drawable/play_arrow"
                    app:iconGravity="textStart"
                    app:iconSize="24dp"
                    android:textColor="?attr/colorOnPrimary"
                    app:backgroundTint="?attr/colorPrimary"
                    app:iconTint="?attr/colorOnPrimary"/>

                <!-- Stop Service Button -->
                <com.google.android.material.button.MaterialButton
                    android:enabled="false"
                    android:id="@+id/stop"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginBottom="32dp"
                    android:onClick="stopServiceV"
                    android:text="Stop Monitoring"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:cornerRadius="32dp"
                    app:elevation="2dp"
                    app:icon="@drawable/stop_circle"
                    app:iconGravity="textStart"
                    app:iconSize="24dp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOutline"
                    app:backgroundTint="?attr/colorSurfaceVariant"
                    app:iconTint="?attr/colorOnSurfaceVariant"/>

            </LinearLayout>

            <!-- Safety Tips Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="?attr/colorPrimaryContainer"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/chat_info"
                        android:background="@drawable/info_icon_bg"
                        android:padding="12dp"
                        android:layout_marginEnd="16dp"
                        app:tint="?attr/colorOnPrimaryContainer" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Safety Tip"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Keep the service active when traveling alone or in unfamiliar areas for enhanced safety."
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            android:alpha="0.8"
                            android:lineSpacingExtra="2dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>